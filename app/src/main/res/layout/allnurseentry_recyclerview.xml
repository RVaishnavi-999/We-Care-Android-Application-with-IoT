<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/zxing_transparent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="16dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/set_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <!-- name -->
            <LinearLayout
                android:id="@+id/namell"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/set_image"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="18dp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/set_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <!--User ID -->
            <LinearLayout
                android:id="@+id/useridll"
                android:layout_toRightOf="@+id/set_image"
                android:layout_below="@+id/namell"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID : "
                    android:textSize="18dp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_nurseuserid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <!--Duty Shift -->
            <LinearLayout
                android:id="@+id/dutyll"
                android:layout_toRightOf="@+id/set_image"
                android:layout_below="@+id/useridll"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duty Shift: "
                    android:textSize="18dp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/set_dutyshift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#F87212"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="18dp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/set_contactnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail : "
                android:textSize="18dp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/set_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</ScrollView>