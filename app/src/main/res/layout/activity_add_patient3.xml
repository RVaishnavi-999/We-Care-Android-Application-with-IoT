<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".add_patient3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/bg"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/step1"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/step_btn_design"
            android:letterSpacing="0.09"
            android:text="STEP 1 "
            android:textColor="#000"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/step2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/step_btn_design"
            android:letterSpacing="0.09"
            android:text="STEP 2 "
            android:textColor="#000"
            android:textSize="14dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/step3"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/step_btn_design"
            android:letterSpacing="0.09"
            android:text="STEP 3 "
            android:textColor="#000"
            android:textSize="14dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/light_bg">

            <TextView
                android:text="Patient Allotment Detailes"
                android:textColor="#0d6e6a"
                android:textSize="25dp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Patient ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_patient_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint=" Patient  ID"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/generate_id"
                    android:text="Generate ID"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/shadow_button_"
                    android:layout_width="120dp"
                    android:layout_height="54dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_admission_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint=" Admission Date"
                        android:inputType="date"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_adm_date"
                    android:text="Click"
                    android:letterSpacing="0.08"
                    android:layout_marginTop="8sp"
                    android:layout_width="120dp"
                    android:layout_height="54dp"
                    android:background="@drawable/shadow_button_"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_admission_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint=" Admission Time"
                        android:inputType="time"
                        android:minHeight="48dp"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="18sp"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_adm_time"
                    android:text="Click"
                    android:layout_marginTop="8sp"
                    android:letterSpacing="0.08"
                    android:background="@drawable/shadow_button_"
                    android:layout_width="120dp"
                    android:layout_height="54dp" />

            </LinearLayout>

            <!--Reason for the admission / Present illness -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="10dp"
                android:background="@color/teal_200"
                android:fontFamily="sans-serif-light"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text=" Reason for the admission/Present illness "
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!-- illness -->
            <Spinner
                android:id="@+id/illness"
                android:contentDescription=" Select speciality"
                android:background="@drawable/light_bg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="9dp"
                android:paddingLeft="10dp"
                android:spinnerMode="dialog"
                tools:ignore="HardcodedText" />


            <!--Smart Patient Monitoring floor1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="10dp"
                android:background="@color/teal_200"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text=" Smart Patient Monitoring Floor1"
                android:letterSpacing="0.05"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- beds-->
            <GridLayout
                android:id="@+id/mainGrid"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2"
                android:padding="3dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/spm_card1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/spm_iv_1"
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bed"
                            />

                        <TextView
                            android:id="@+id/spm_tv_1"
                            android:text=" ICU"
                            android:textStyle="bold"
                            android:textColor="#0D0D10"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="52dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/spm_card2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/spm_iv_2"
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bed"/>

                        <TextView
                            android:id="@+id/spm_tv_2"
                            android:text="ICCU"
                            android:textStyle="bold"
                            android:textColor="#0A0B0B"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="52dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/spm_card3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/spm_iv_3"
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bed"/>

                        <TextView
                            android:id="@+id/spm_tv_3"
                            android:text="SICU"
                            android:textStyle="bold"
                            android:textColor="#060607"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="52dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/spm_card4"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/spm_iv_4"
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bed"/>

                        <TextView
                            android:id="@+id/spm_tv_4"
                            android:text="PICU"
                            android:textStyle="bold"
                            android:textColor="#060607"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="52dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_care_unit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint=" Selected Care Unit"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:cursorVisible="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="10dp"
                android:background="@color/teal_200"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text=" Floor - 2"
                android:letterSpacing="0.05"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/delux"
                            android:layout_width="300dp"
                            android:layout_height="184dp"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/delux" />

                        <TextView
                            android:id="@+id/tv_delux"
                            android:text=" Deluxe Room"

                            android:textColor="#0D0D10"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="88dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/special_room"
                            android:layout_width="300dp"
                            android:layout_height="188dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/specialroom" />

                        <TextView
                            android:id="@+id/tv_special_room"
                            android:text=" Special Room"
                            android:textColor="#0D0D10"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="88dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/general_ward"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:src="@drawable/generalward" />

                        <TextView
                            android:id="@+id/tv_general_ward"
                            android:text=" General Ward"
                            android:textColor="#0D0D10"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="88dp"
                            android:layout_marginBottom="1dp"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ward_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint=" Selected Ward"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="18sp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:cursorVisible="false"/>
            </com.google.android.material.textfield.TextInputLayout>




            <!--Treating Doctor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="10dp"
                android:background="@color/teal_200"
                android:fontFamily="sans-serif-light"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text=" Treating Doctor "
                android:paddingLeft="10dp"
                android:letterSpacing="0.07"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- spinner for cardiologist-->
            <Spinner
                android:id="@+id/spinner_dr"
                android:contentDescription=" Select Designation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="9dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:background="@drawable/light_bg"
                android:spinnerMode="dialog" />

            <!-- save -->
            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/save_layout"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                app:neomorph_view_type="rectangular"
                app:neomorph_shadow_type="outer"
                app:neomorph_elevation="10dp"
                app:neomorph_corner_radius="10dp"
                app:neomorph_background_color="@color/teal_200"
                app:neomorph_shadow_color="@color/teal_700"
                app:neomorph_highlight_color="#CAF7FC">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/save_btn"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="35dp"
                    android:background="@color/teal_200"
                    android:letterSpacing="0.12"
                    android:text="SAVE "
                    android:textColor="#000"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>