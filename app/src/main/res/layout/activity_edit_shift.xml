<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/home_pg_gradient"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    tools:context=".AddShift">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shiftname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ten"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Select the Shift Start date"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/openCalendar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/hot_pink_corner"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Open Calendar"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateSelected1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/showto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="to"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/dateSelected2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHIFT DAYS"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/monday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Mon"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tueday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Tue"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/wednesday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Wed"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/thursday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Thu"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/friday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Fri"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saturday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/btn_bg_push_schedule"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Sat"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sunday"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/white_corner"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Sun"
                    android:textColor="#00838F"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.259" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Previous Shift"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewoldshift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Previous Shift"
                    android:textColor="@color/teal_700"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shift Type"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:thumb="@drawable/thumb"
                    app:track="@drawable/track" />

                <ImageButton
                    android:id="@+id/viewshifts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_visibility_24"
                    android:contentDescription="TODO"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="HOLIDAY"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Tap on it)"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/holiday"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/white_corner"
                android:fontFamily="sans-serif-medium"
                android:text="Sun"
                android:textColor="#00838F"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.259" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/savechanges"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/hot_pink_corner"
                android:text="SAVE CHANGES"
                android:textColor="#fff"
                />

            <ProgressBar
                android:id="@+id/progressBar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>